<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_student_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_student_nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student NIM"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Anda sudah terdaftar dalam sidang pengujian, Mohon tunggu beberapa saat untuk melihat jadwal pengujian"
        android:textSize="14sp"
        android:visibility="gone"
        android:id="@+id/tv_waiting_message" />

    <LinearLayout
        android:id="@+id/ll_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal Pengujian"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM: "
            android:id="@+id/tv_schedule_nim" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama: "
            android:id="@+id/tv_schedule_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester: "
            android:id="@+id/tv_schedule_semester" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SKS Lulus: "
            android:id="@+id/tv_schedule_sks_lulus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Skripsi: "
            android:id="@+id/tv_schedule_judul_skripsi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal: "
            android:id="@+id/tv_schedule_date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu: "
            android:id="@+id/tv_schedule_time" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Pengujian: "
            android:id="@+id/tv_schedule_location" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penguji 1: "
            android:id="@+id/tv_schedule_examiner1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penguji 2: "
            android:id="@+id/tv_schedule_examiner2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penguji 3: "
            android:id="@+id/tv_schedule_examiner3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penguji 4: "
            android:id="@+id/tv_schedule_examiner4" />
    </LinearLayout>
</LinearLayout>
